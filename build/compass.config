#
# Compass Configuration
#

# HTTP paths
http_path             = '/'
http_stylesheets_path = '/static/style'
http_images_path      = '/static/img'
http_javascripts_path = '/static/js'

# File system locations
sass_dir              = 'stylesheets'
css_dir               = 'public/static/style'
images_dir            = 'public/static/img'
javascripts_dir       = 'public/static/js'

# Set to true for easier debugging
line_comments         = false

# CSS output style - :nested, :expanded, :compact, or :compressed
output_style          = :compressed

# Determine whether Compass asset helper functions generate relative
# or absolute paths
relative_assets       = true

# Learn more:
#   http://compass-style.org/docs/tutorials/configuration-reference/

asset_cache_buster :none
